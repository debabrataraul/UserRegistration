<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_activities"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.incture.userregistration.UserProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="0dp">
    <!--Layout 1 Starts-->
        <LinearLayout
            android:paddingTop="16dp"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dateRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12 Nov"
                android:gravity="right"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/yearRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2013"
                android:gravity="right"
                android:textSize="10sp" />
        </LinearLayout>

        <!--Layout 2 Starts-->
        <RelativeLayout
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <View
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#c0c0c0"/>
            <ImageView
                android:id="@+id/activityTypeIMRV"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_send_white_24dp"
                android:background="@drawable/circular_view_task"
                />
        </RelativeLayout>

        <!--Layout 3 Starts-->
        <LinearLayout
            android:paddingTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--Layout 3.1 Starts-->
            <TextView
                android:id="@+id/activityHeadingRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Davis created a task"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="14sp" />
            <!--Layout 3.2 Starts-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.incture.userregistration.SelectableRoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/userProfilePicIMRV"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:src="@drawable/profile_pic1"
                    android:scaleType="centerCrop"
                    app:sriv_left_top_corner_radius="10dip"
                    app:sriv_right_top_corner_radius="10dip"
                    app:sriv_left_bottom_corner_radius="10dip"
                    app:sriv_right_bottom_corner_radius="10dip"
                    app:sriv_border_width="2dip"
                    app:sriv_border_color="#ffffff"
                    app:sriv_oval="false" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/userNameRV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Davis"/>
                    <TextView
                        android:id="@+id/activityDetailsRV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please create the required bill of materials for our CAPEX"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/attachedImageIMRV"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/debabrata"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/noOfCommentsRV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal|italic"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_option_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_transform_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reopen"
                    android:gravity="center_vertical"
                    android:textSize="10sp"
                    android:layout_marginRight="40dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_mode_comment_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comments"
                    android:textSize="10sp"
                    android:layout_marginRight="40dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_more_horiz_black_24dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="#c0c0c0"/>
</LinearLayout>
