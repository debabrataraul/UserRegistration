<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="75dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/greybackground"
    tools:context="com.incture.userregistration.SignUpActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:background="@drawable/textview_background"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="40dp"
        android:id="@+id/nameET" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/addressET"
        android:layout_below="@+id/mobileET"
        android:layout_alignLeft="@+id/mobileET"
        android:layout_alignStart="@+id/mobileET"
        android:hint="PostalAddress"
        android:background="@drawable/textview_background"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirmPasswordET"
        android:hint="Confirm Password"
        android:background="@drawable/textview_background"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/passwordET"
        android:layout_alignLeft="@+id/passwordET"
        android:layout_alignStart="@+id/passwordET" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_marginTop="13dp"
        android:id="@+id/mobileET"
        android:hint="Mobile"
        android:background="@drawable/textview_background"
        android:layout_below="@+id/confirmPasswordET"
        android:layout_alignLeft="@+id/confirmPasswordET"
        android:layout_alignStart="@+id/confirmPasswordET" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordET"
        android:layout_marginTop="12dp"
        android:hint="Password"
        android:background="@drawable/textview_background"
        android:layout_below="@+id/emailET"
        android:layout_alignLeft="@+id/emailET"
        android:layout_alignStart="@+id/emailET" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="14dp"
        android:id="@+id/emailET"
        android:hint="Email"
        android:background="@drawable/textview_background"
        android:layout_below="@+id/nameET"
        android:layout_alignLeft="@+id/nameET"
        android:layout_alignStart="@+id/nameET" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSubmit"
        android:layout_marginTop="41dp"
        android:text="Submit"
        android:background="@drawable/btn"
        android:layout_marginRight="59dp"
        android:layout_marginEnd="59dp"
        android:layout_below="@+id/addressET"
        android:layout_alignRight="@+id/addressET"
        android:layout_alignEnd="@+id/addressET" />
</RelativeLayout>
